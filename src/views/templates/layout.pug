block variables
doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    block meta
  body
    if home_layout
      div(class=`layout ${home_layout}`)
        include ../components/header.pug
        block content
        div(class="footer__fixed")
          include ../components/footer.pug
    else
      div(class="layout")
        include ../components/header.pug
        block content
        include ../components/footer.pug